<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/micBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="102dp"
            android:elevation="4dp"
            android:background="@drawable/ic_mic_black_48dp" />

        <TextView
            android:id="@+id/micTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Tap on the mic and let's chat :)"
            android:layout_below="@id/micBtn"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/micTxt"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User's request"
                android:layout_gravity="center_horizontal"
                android:id="@+id/UserfeedbackLbl"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:elevation="4dp"
                android:padding="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/userTextView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Response"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90dp"
                android:id="@+id/ResourceLbl"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="4dp"
                android:isScrollContainer="true"
                android:padding="10dp"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="aboutBtn"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>